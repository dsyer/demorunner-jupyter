// For format details, see https://aka.ms/vscode-remote/devcontainer.json or the definition README at
// https://github.com/microsoft/vscode-dev-containers/tree/master/containers/docker-existing-dockerfile
{
  "name": "nix-devcontainer-python-jupyter",
  "image": "mcr.microsoft.com/devcontainers/anaconda",

  "runArgs": [
    "--security-opt", "label=disable"
  ],

  "mounts": [
    "source=conda,target=/opt/conda,type=volume",
    "source=kernels,target=/home/vscode/.local/share/jupyter,type=volume"
  ],

  "postCreateCommand": "sudo chown vscode:vscode /home/vscode/.local/share/jupyter && conda env update -n base -f environment.yml && python -m bash_kernel.install",

  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    // python support
    "ms-python.python",
    // jupyter support
    "ms-toolsai.jupyter"
  ],

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "go version",
}
